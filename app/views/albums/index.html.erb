<h1>Albums</h1>
<div>
  <table>
    <tr>
      <th scope='col'>
        <%= link_to 'Title', albums_title_sort_path %>
      </th>
      <th scope='col'>
        <%= link_to 'Artist', albums_artist_sort_path %>
      </th>
      <th scope='col'>
        <%= link_to 'Year', albums_year_sort_path %>
      </th>
      <th scope='col'>
        <%= link_to 'Genre', albums_genre_sort_path %>
      </th>
    </tr>
    <% @albums.each do |a| %>
    <tr>
      <td><%= link_to a.title, album_path(a) %></td>
      <td><%= a.artist %></td>
      <td><%= a.year %></td>
      <td><%= a.genre %></td>
      <td><%= link_to 'Edit', edit_album_path(a) %></td>
      <td><%= link_to 'Delete', album_path(a), method: :delete %></td>
    </tr>
    <% end %>
  </table>
</div>
<p><%= link_to 'New Album', new_album_path %></p>
